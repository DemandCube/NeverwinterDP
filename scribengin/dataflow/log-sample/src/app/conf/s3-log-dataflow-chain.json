        }
      },

      "loggerConfig" : {
        "logLevel" : "INFO ",
        "consoleAppender" : { "enable" : true },

        "fileAppender" : {
          "enable" : true, "name" : "file", "filePath" : "build/logs/vm.log", "maxSizeInMb" : 5, "maxBackup" : 5
